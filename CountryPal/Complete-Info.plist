<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Information -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>CountryPal</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	
	<!-- URL Schemes for Auth0 Authentication -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>auth0</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>mad-llama.CountryPal</string>
			</array>
		</dict>
	</array>
	
	<!-- App Transport Security for Auth0 -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>
	
	<!-- Query Schemes for External Apps -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>https</string>
		<string>googlechrome</string>
		<string>googleauth</string>
		<string>com.googleusercontent.apps</string>
		<string>fbapi</string>
		<string>fb-messenger-share-api</string>
	</array>
	
	<!-- Location Services (Already Configured) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>CountryPal needs your location to show nearby community events and help you discover local activities.</string>
	
	<!-- Optional: Camera and Photo Library for Profile Photos -->
	<key>NSCameraUsageDescription</key>
	<string>CountryPal would like to access your camera to update your profile photo.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>CountryPal would like to access your photo library to update your profile photo.</string>
	
	<!-- iOS Device Requirements -->
	<key>LSRequiresIPhoneOS</key>
	<true/>
	
	<!-- Supported Device Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- iPad Supported Orientations -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- UI Style -->
	<key>UILaunchScreen</key>
	<dict/>
	<key>UISceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
</dict>
</plist>